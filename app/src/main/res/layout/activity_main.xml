<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.cupboard.cupboardhardware.MainActivity">

    <Button
        android:id="@+id/btn_usblist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USB-列表" />

    <Button
        android:id="@+id/btn_usbsearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USB-查询" />

    <Button
        android:id="@+id/btn_usbsend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USB-发送" />

    <Button
        android:id="@+id/btn_seriallist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="串口-列出" />

    <Button
        android:id="@+id/btn_serialconfiguer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="串口-配置" />

    <Button
        android:id="@+id/btn_serialsenddata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="串口-发送" />

</LinearLayout>
